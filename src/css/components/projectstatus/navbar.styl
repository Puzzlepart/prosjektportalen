@import '../../conf/*';

.navigation {
    z-index: 99;
    width: 100%;

    .nav-status-container {
        margin-bottom: 30px;
        height: 96px;
        background-color: #efefef;

        .nav-links {
            width: 100%;
            list-style: none;
            padding: 0;
            display: flex;
            flex-wrap: nowrap;
            -ms-flex-wrap: nowrap;
            justify-content: space-around;

            .nav-link {
                padding: 9px 10px;
                text-decoration: none;
                cursor: pointer;
                text-align: center;

                &.active {
                    .ms-Icon, span {
                        color: #000;
                    }
                    span {
                        font-weight: 600;
                    }
                }

                .ms-Icon {
                    font-size: 25px;
                    color: #575757
                    vertical-align: middle;
                }

                span {
                    color: #575757;                    
                    padding-left: 5px;
                    max-width: 130px;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                }

                @media (max-width: 1280px) {
                    .ms-Icon {
                        display: none;
                    }
                }
            }
        }

        .nav-details {
            color: white;
            background: #939393;
            max-height: 50px;
            padding: 10px;

            h2.status-page-header {
                color: white;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            p {
                line-height: 48px;
                margin: 0;

                span {
                    vertical-align: top;
                }
            }

            .export-section {
                .ms-Icon.ms-Icon--History {
                    vertical-align: top;
                    margin-top: 9px;
                }

                .ms-Dropdown-container {
                    display: inline-block;
                    width: 90%;

                    .ms-Dropdown {
                        .ms-Dropdown-title {
                            border: 0;
                            background: none;
                            color: white;
                        }

                        i {
                            color: white;
                        }
                    }
                }

                .save-snapshot-btn {
                    cursor: pointer;
                    background-color: transparent;
                    color: #fff;
                    border: 0;

                    &:hover {
                        border: 0;
                    }
                }
            }
        }
    }

    .pp-snapshot-dialog {
        height: 900px;
        min-width: 1000px !important;
    }
}

#pp-reportDropdown-list0 {
    display: none;
}