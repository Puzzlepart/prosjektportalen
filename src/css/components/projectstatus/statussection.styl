.status-section {
    padding: 10px;
    background-color: #eff6fa;

    a, a:visited {
        color: #1C4269;
    }

    h3 {
        text-transform: uppercase;
    }
    
    h2 {
        font-weight: 400;
    }

    [data-icon-name] {
        &.positive-status {
            color: #2da748;
        }

        &.negative-status {
            color: #ea5c73;
        }

        &.neutral-status {
            color: #e9b359;
        }
    }

    .status-elements {
        .status-element {
            display: block;
            padding: 10px;

            .status-icons {
                font-size: 40px;
            }

            .status-details {
                p {
                    margin: 0.5em 0 0.5em 0;
                }
            }
        }
    }
}